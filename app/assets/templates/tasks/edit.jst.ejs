
<div class="jumbotron col-xs-5" height="50%">
<h4><%= task.escape('source_lang')%></h4>
<%= task.escape('source_text')%>
</div>

<div class=col-xs-2></div>

<div class="jumbotron col-xs-5" height="50%">
	<h4><%= task.escape('target_lang')%></h4>
	<form id="edit">
	  <div class="form-group">
	  <textarea 
			class="form-control" 
			rows="10" 
			id="target_text" 
			name="task[target_text]" 
			value="<%= task.escape('machine_text')%>"
			><%= task.escape('machine_text')%></textarea>
			<button class="btn btn-default">Submit</button>
			<small><strong>Earn $ <%= (task.escape('price') / 100.0).toFixed(2) %></strong></small>
	  </div>
		<div id="earnings"><small class="coral" ><strong>$ <%= (counter /100.00).toFixed(2) %> this session</strong></small></div>
	</form>
</div>

