<div class="row">
  <div class="box">
   <h2><%= currentUser.escape('username') %>'s Profile</h2>
	 <h4><%= currentUser.escape('wordCount') %> words translated</h4>
 	</div>
</div>        

<div class="row">
  <div class="box">
   <h2>Bank Account</h2>
	 <h4>$<%= currentUser.escape('funds') %></h4>
 	</div>
</div>        

<div class="row">
  <div class="box">
   <h2>Get more credit</h2>
	 <h4>Stripe API</h4>
 	<form id="buyCredit">
 	  <div class="form-group">
    <select class="form-control" name ="user[funds]" id="select">
      <option value='5'>$5</option>
      <option value='10'>$10</option>
      <option value='25'>$25</option>
    </select>
 		<button class="btn btn-default">Buy</button>
 	</form>
 	</div>
</div>        

<div class="row">
  <div class="box">
   <h2>My Orders and Downloads</h2>
	 <table class="table table-striped box" id="order">
	 	<thead>
	 		<tr>
	 			<th>Order Date</th>
	 			<th>Status</th>
	 			<th>Title</th>
	 			<th>Cost</th>
	 		</tr>
	 	</thead>
	 	<tbody>
	 		<% jobs.each( function(job) { %>
	 		<tr class="info">
	 			<td>7/28/14</td>
	 			<td><%= job.escape('status')%></td>
	 			<td><%= job.escape('title')%></td>
	 			<td><%= (job.escape('price') / 100.0).toFixed(2)%></td>
	 		</tr>
	 		<% }) %>
	 	</tbody>
	 </table>
 	</div>
</div>        
